<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buycard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar"
        android:background="@color/fbutton_color_peter_river"
        android:layout_height="70dp">

        <TextView
            android:layout_width="match_parent"
            android:text="कार्ड खरीदें"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:text="इन केमिस्ट स्टोर्स से खरीदें कार्ड"
        android:textColor="#4A86E8"
        android:textSize="20dp"
        android:id="@+id/buytitla"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/appbar"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>


    <View
        android:layout_width="match_parent"
        android:background="#A9A9"
        android:id="@+id/view"
        android:layout_below="@+id/buytitla"
        android:layout_height="1dp"/>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friend_list"
        android:layout_below="@+id/view"
        android:layout_marginBottom="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00000000"/>

