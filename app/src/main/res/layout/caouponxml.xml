    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/fbutton_color_peter_river"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:text="विशेषज्ञ चिकित्सक"
            android:textColor="#FFFFFF"
            android:textSize="20dp">

        </TextView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_below="@+id/titile"
        android:layout_width="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/appbar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/titile"
        android:text="सत्यापित डॉक्टरओं से परामर्श करें"
        android:textColor="#5C5A5A"
        android:textSize="16dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friend_list"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/titile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pricebar"
        android:background="@color/white"
        android:layout_below="@+id/friend_list"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#A5A5A5"
            android:text="कुल राशि"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            />


        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:gravity="end"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textColor="#5C5A5A"
            android:layout_alignParentRight="true"
            android:text="200"
            android:layout_toRightOf="@+id/title"

            />

        <View
            android:layout_width="match_parent"
            android:background="#A5A5A5"
            android:id="@+id/view"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/subtitle"
            android:layout_height="1dp"/>




        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#5A5A5A"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/view"
            android:text="भुगतान की राशि"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            />


        <TextView
            android:id="@+id/subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textColor="#5A5A5A"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:text="200"
            android:layout_toRightOf="@+id/title2"

            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_below="@+id/pricebar"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/etScratch"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_weight="0.6"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:background="@drawable/light_box"
        android:drawablePadding="15dp"
        android:drawableTint="@color/colorPrimary"
        android:hint="कूपन कोड"
        android:paddingStart="21dp"
        android:textColorHint="#5A5A5A"
        android:textSize="14dp"
        />



    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1.4"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border_button"
        android:gravity="center"
        android:layout_toRightOf="@+id/etScratch"
        android:text="दर्ज करे"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_below="@+id/etScratch" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@id/buttom"
        android:background="@drawable/shadow"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@color/white"
        android:id="@+id/buttom"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/Texttittleprice"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginStart="20dp"
            android:inputType="number"
            android:gravity="center"
            android:drawableTint="@color/colorPrimary"
            android:hint="भुगतान हेतु राशि:"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/realprice"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_weight="1.3"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:gravity="center"
            android:drawableTint="@color/colorPrimary"
            android:text="299"
            android:textColor="#5A5A5A"
            android:textSize="14dp"
            />



        <Button
            android:id="@+id/paynow"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.7"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/border_button"
            android:gravity="center"
            android:layout_toRightOf="@+id/Texttittleprice"
            android:text="भुगतान करें "
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
           />


    </LinearLayout>

