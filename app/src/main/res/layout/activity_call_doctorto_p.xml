<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fbutton_color_peter_river"
    tools:context=".ActivityCallDoctortoP">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_marginTop="160dp"
        android:id="@+id/box"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:id="@+id/D_degree"
            android:layout_below="@+id/D_name"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            android:text="Alok Kumar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:id="@+id/D_address"
            android:layout_below="@+id/D_degree"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="(Block Name)"/>


    </RelativeLayout>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box"
        android:layout_marginTop="50dp"
        android:id="@+id/audio"
        android:textSize="12dp"
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:layout_marginLeft="40dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Voice Call" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="200dp"
        android:textSize="12dp"
        android:id="@+id/video"
        android:drawableLeft="@drawable/ic_baseline_videocam_24"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Video Call" />


    <ImageView
        android:id="@+id/imageID"
        android:layout_width="match_parent"
        android:layout_marginBottom="120dp"
        android:background="@drawable/splashscreen"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/video"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/chooseBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:onClick="selectImage"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:text="Choose Image" />

    <Button
        android:id="@+id/uploadBtn"
        android:textAllCaps="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="uploadImage"
        android:text="Send Image to Patient"
        android:layout_below="@id/chooseBtn" />
    </LinearLayout>

</RelativeLayout>