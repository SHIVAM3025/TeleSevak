        android:gravity="center"
        android:text="Submit" />

    <View
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_marginTop="30dp"
        android:id="@+id/view"
        android:backgroundTint="#f1f5f8"
        android:layout_below="@+id/submit"
