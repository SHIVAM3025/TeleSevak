<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".ProfileDoctor">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/fbutton_color_peter_river">



    </RelativeLayout>





    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="15dp">

        <Spinner
            android:id="@+id/spinnerCountries"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:digits="0123456789"
            android:inputType="phone"
            android:hint="अपना नंबर दर्ज करें"
            android:maxLength="10" />

    </LinearLayout>

    <!--<Button
        android:id="@+id/buttonContinue"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#ffffff" />-->

    <EditText
        android:id="@+id/etScratch"
        android:layout_width="267dp"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="237dp"
        android:hint="अपना स्क्रैच कार्ड दर्ज करें" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/fbutton_color_peter_river"
        android:drawableRight="@drawable/ic_baseline_trending_flat_24"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonContinue"
        android:layout_marginTop="20dp"
        android:text="जारी रखें"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_above="@+id/etScratch"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="242dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="9dp"
        android:text="या"
        android:textAlignment="center"
        android:textSize="16sp" />


</RelativeLayout>